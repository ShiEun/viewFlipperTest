<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.hs.emirim.tldms0940.viewflippertest.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/but_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/but_text_prev"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_horizontal" />
        <Button
            android:id="@+id/but_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/but_text_next"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    <ViewFlipper
        android:id="@+id/view_flip"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="#ff9090"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>
        <LinearLayout
            android:background="#acd491"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>
        <LinearLayout
            android:background="#ede389"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>
    </ViewFlipper>

</LinearLayout>
